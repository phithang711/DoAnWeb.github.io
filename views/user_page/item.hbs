    <div class="container-main-content">
        <div class="wrap-main-content wrap-item-view">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="{{picture}}" class="img-fluid" alt="First slide" />
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="{{picture}}" class="img-fluid" alt="Second slide" />
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="{{picture}}" class="img-fluid" alt="Third slide" />
                    </div>
                </div>
                <div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
