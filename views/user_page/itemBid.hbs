        <div>
            <div class="btn-group " role="group" aria-label="Basic example">
                <button type="button" data-toggle="collapse" href="#bid-collapse" class="btn btn-primary normal-bid-btn">Normal Bid</button>
                <button type="button" data-toggle="collapse" href="#auto-bid-collapse" class="btn btn-primary">Auto Bid</button>
            </div>
        </div>
        <div class="collapse show bid-collapse" id="bid-collapse">
            <div class="card card-body">
                <label>Price: </label>
                <div class="input-group mb-3">
                    <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="number" class="form-control bid-price" value="300" aria-label="Amount (to the nearest dollar)">
                    <div class="input-group-append">
                        <span class="input-group-text">.00</span>
                    </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="collapse autobid-collapse" id="auto-bid-collapse">
            <div class="card card-body">
                <div class="card card-body">
                    <label>Price: </label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input type="number" id="autobid-price" class="form-control bid-price" value="300" aria-label="Amount (to the nearest dollar)">
                        <div class="input-group-append">
                            <span class="input-group-text">.00</span>
                        </div>
                    </div>
                    <label>Maximum Price: </label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input type="number" id="maximum-price" class="form-control bid-price" value="0" aria-label="Amount (to the nearest dollar)">
                        <div class="input-group-append">
                            <span class="input-group-text">.00</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <button type="button" class="btn btn-success" id="buy-btn">Buy</button>
        <button type="button" class="btn btn-danger buy-now-btn" id="buy-now">Buy Now</button>
        </div>

